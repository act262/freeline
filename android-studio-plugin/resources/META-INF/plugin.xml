<idea-plugin version="2">
    <id>intellij.freeline.plugin</id>
    <name>Plugin4Freeline</name>
    <version>1.0</version>
    <category>Build</category>
    <vendor email="act262@gmail.com" url="http://github.com">Anonymous</vendor>

    <description><![CDATA[
      plugin for <a href="https://github.com/alibaba/freeline">freeline</a>
    ]]></description>

    <change-notes><![CDATA[
      basic use freeline
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">

        <toolWindow
                id="Buck"
                anchor="bottom"
                icon="/icons/ic_free.jpg"
                factoryClass="com.antfortune.freeline.plugin.ui.BuckToolWindowFactory"/>

        <!--<projectService-->
        <!--serviceImplementation="com.antfortune.freeline.plugin.ui.BuckUIManager"/>-->
    </extensions>

    <actions>

        <!-- Menu -->
        <group id="freeline.Menu">
            <action id="freeline.Build" class="com.antfortune.freeline.plugin.actions.BuildAction" text="Build Freeline"
                    description="Run Freeline script command line" icon="/icons/ic_free.jpg">
                <add-to-group group-id="BuildMenu" anchor="last"/>
                <add-to-group group-id="ToolbarRunGroup" anchor="after" relative-to-action="RunnerActions"/>
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift F10"/>
            </action>

            <action id="freeline.Setting" class="com.antfortune.freeline.plugin.actions.SettingAction"
                    text="Freeline Setting"
                    description="params setting" icon="/icons/status_bar.png">
                <add-to-group group-id="ToolsMenu" anchor="first"/>
            </action>
        </group>

        <!-- ToolBar -->
        <group id="freeline.BuildGroup">
            <separator/>
        </group>
    </actions>

    <application-components>
        <component>
            <implementation-class>com.antfortune.freeline.plugin.SettingComponent</implementation-class>
        </component>
    </application-components>
</idea-plugin>